    <title>login</title>
</head>

<body>

    <div class="col-sm-12">
        <div class=" logoheading text-center mt-5">
            <h2>Kalikaal</h2>
        </div>
        <div class=" subheading text-center ">
            <h4> Kalikaal Ka Fashion</h4>
        </div>
        <div class="d-flex justify-content-center mt-5 pb-5 " id="full">
            <div class="card  p-3 mb-5 bg-white" style="border-radius: 5rem;">
                <div class="card-body">
                    <div style="text-align: center">
                        <h2 class="card-title">Reset password</h2>
                    </div>
                    <form class="form-signup" method="post" action="/resetPasswordOtpVerify" id='resetFormEmail'>
                        <div style="text-align: center">
                            <h6 class="sentenceofin">Enter otp send to your mail</h6>
                            <% if (locals.message) { %>
                                <span style="color: red;">
                                    <%= message %>
                                </span>
                                <% } %>
                        </div>

                        <div class="form-group mt-2">
                            <input type="number" name="otp" placeholder="Enter otp" class="form-control"
                                id="otp" required style="border-radius: 3rem;" />
                        </div>
                        <p>
                        <div id="error1" style="display: none;" class="alert alert-danger err"></div>
                        </p>
                   <span id="countdownTimer" class="ms-2 badge bg-primary"></span>
                   <input type="hidden" name="email" value="<%= email %>">






                        <div class="form-group mt-4">
                            <input type="submit" class="form-control btn btn-primary btn-block btn-lg" value="verify" />
                        </div>
                        <div style="
                display: flex;
                flex-direction: column;
                align-items: center;
                justify-content: center;
              ">
                            
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="/public/js/script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
        integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
        integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
        crossorigin="anonymous"></script>
   <script>
    
        let timer;
        let timeLeft = 60; // Set the initial time in seconds


        function startTimer() {
            timer = setInterval(() => {
                if (timeLeft <= 0) {
                    clearInterval(timer); // Clear the timer when time is up
                    document.getElementById("countdownTimer").textContent = "Time's up!";
                   
                    // You can also trigger some action here when the time is up
                } else {
                    document.getElementById("countdownTimer").textContent = `${timeLeft} seconds left`;
                    timeLeft--;
                }
            }, 1000); // Update the timer every second
        }
        startTimer()


    const form=document.getElementById("resetFormEmail")
    const otp=document.getElementById("otp")
    const error1=document.getElementById("error1")


function otpvalidate(e) {
    const enteredNumber = otp.value.trim() 

 
  if (enteredNumber === '' || isNaN(enteredNumber) || enteredNumber.length < 3) {
    error1.style.display = "block";
    error1.innerHTML = "Enter valid otp";
    error1.style.color = "red"; 
  } else {
    error1.style.display = "none";
    error1.innerHTML = "";
  }
}

otp.addEventListener("blur",otpvalidate)
form.addEventListener("submit",(e)=>{
    otpvalidate()
    if(error1.innerHTML){
        e.preventDefault()
    }else{
        console.log("validation passed")
    }

})

   </script>

</body>

</html>