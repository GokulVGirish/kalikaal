<%- include("../partials/adminHeader") %>
      <section class="content-main">
        <div class="content-header">
          <div>
            <h2 class="content-title card-title">Customers List</h2>
          </div>
        </div>
        <div class="card mb-4">
          <!-- card-header end// -->
          <div class="card-body">
            <table class="table" id="customerTable">
              <thead>
                <tr>
                  <th>customers</th>
                  <th>email</th>
                  <th>phone</th>
                  <th>Status</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% for( let i = 0; i < data.length; i++ ) { %>

                <tr>
                  <td>
                    <span class="  "> <%= data[i].name %> </span>
                  </td>
                  <td>
                    <span class=""> <%= data[i].email %> </span>
                  </td>
                  <td>
                    <span class=""> <%= data[i].phone %> </span>
                  </td>
                  <td>
                    <span class="badge rounded-pill alert-success"
                      ><%= data[i].isActive %></span
                    >
                  </td>
                  <td>
                    <% if (data[i].isActive===true) { %>
                    <button
                      class="btn btn-danger"
                      style="width: 70px"
                      onclick="custUnlist('<%=data[i]._id %>')"
                    >
                      Block
                    </button>
                    <% } else { %>
                    <button
                      class="btn btn-success"
                      style="width: 70px"
                      onclick="custList('<%=data[i]._id %>')"
                    >
                      UnBlock
                    </button>
                    <% } %>
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
            <!-- itemlist  .// -->
          </div>
          <!-- card-body end// -->
        </div>
        <!-- card end// -->
      </section>
      <!-- content-main end// -->
      <footer class="main-footer font-xs">
        <div class="row pb-30 pt-15">
          <div class="col-sm-6">
